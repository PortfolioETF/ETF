<h2 class="new-registration-label">Sign up(Cloak)</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="new-registration-field">
    <%= f.label :cloak_name %><br />
    <%= f.text_field :cloak_name, autofocus: true, autocomplete: "cloak_name" %>
  </div>

  <div class="new-registration-field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="new-registration-field">
    <%= f.label :phone_number %><br />
    <%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number" %>
  </div>

  <div class="new-registration-field">
    <%= f.label :address %><br />
    <%= f.text_field :address, autofocus: true, autocomplete: "address", class: "new-registration-form" %>
  </div>

  <div class="new-registration-field">
    <%= f.label :availability %><br />
    <%= f.number_field :availability, autofocus: true, autocomplete: "availability", class: "new-registration-form" %>
  </div>

  <div class="new-registration-field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 文字以上で入力してください)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "new-registration-form" %>
  </div>

  <div class="new-registration-field">
    <%= f.label :"パスワード確認用" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "new-registration-form" %>
  </div>

  <div class="actions">
    <%= f.submit "Signup", class: "new-user-create-button" %>
  </div>
<% end %>
