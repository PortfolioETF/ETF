<div id="public-reserves-index">
  <h2 class="reserves-index-title">予約履歴</h2>
  <div class="h-container">
    <h5 class="reserves-index-title-h5">アプリでのキャンセルは前日まで有効です</h2>
  </div>
  <div class="notice-container">
    <p class="notice"><%= notice(flash[:notice]) %>
  </div>
  <% @reserves.each do |reserf| %>
    <div class="public-reserf-cloak-name-container">
      <p class="public-name-label">店舗名:</p>
      <%= link_to reserf.cloak.cloak_name, cloak_path(reserf.cloak.id), class: "link-to-cloak" %>
    </div>
    <div class="public-reserf-cloak-address-container">
      <p class="public-reserf-cloak-address-label">住所:</p>
      <div class="public-reserf-cloak-address"><%= reserf.cloak.address %></div>
    </div>
    <div class="public-reserf-cloak-time-container">
      <p class="public-reserf-cloak-time-label">時間:</p>
        <div class="start-time-container">
          <div class="public-reserf-cloak-start-time"><%= reserf.start_time.strftime("%Y-%m-%d %H:%M") %></div>
          <p class="nami">〜</p>
        </div>
      <div class="public-reserf-cloak-end-time"><%= reserf.end_time.strftime("%Y-%m-%d %H:%M") %></div>
    </div>
    <div class="public-reserf-amount-container">
      <p class="public-reserf-amount-label">スーツケースの個数:</p>
      <div class="public-reserf-amount"><%= reserf.amount %>個分</div>
    </div>
    <% if Time.now.yesterday < reserf.start_time %>
      <div class="cancel-container">
        <%= link_to "キャンセル", reserf_path(reserf), method: :delete, data: {confirm: "キャンセルしてよろしいですか？"}, class: "link-to" %>
      </div>
    <% end %>
    <p class="partertion-bar">-------------------------------------------------------------------------------------------------------------------</p>
  <% end %>
</div>
<%= paginate @reserves %>
